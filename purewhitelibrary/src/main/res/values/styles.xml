<resources>


    <!-- background  windowBackground  windowIsTranslucent -->

    <!-- Base application theme. -->
    <style name="PureBaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- window背景颜色 -->
        <item name="android:windowBackground">@color/pure_back</item>
        <!-- 状态拦颜色 -->
        <item name="colorPrimaryDark">@color/pure_write</item>
        <!--Button、TextView的文字颜色-->
        <item name="android:textColor">@color/pure_text_default</item>
        <!-- Button、TextView的提示文字颜色 -->
        <item name="android:textColorHint">@color/pure_text_hint_default</item>
        <!-- 解决 Android 5.1 及以上版本 Button 英文字符串自动变大写的问题 -->
        <item name="android:textAllCaps">false</item>
        <!-- 没有actionBar -->
        <item name="windowActionBar">false</item>
        <!--  无标题 -->
        <item name="windowNoTitle">true</item>
        <!-- app没有闪屏页 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- windowIsTranslucent   这个别随意乱用 ，叫做window背景透明 -->
    </style>



    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/pure_activity_enter_left</item>
        <item name="android:activityOpenExitAnimation">@anim/pure_activity_exit_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/pure_activity_enter_left</item>
        <item name="android:activityCloseExitAnimation">@anim/pure_activity_exit_right</item>
    </style>

</resources>
