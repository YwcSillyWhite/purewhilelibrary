<resources>


    <!-- Base application theme. -->
    <style name="PureBaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--  背景颜色  -->
        <item name="android:windowBackground">@color/pure_back</item>
        <!-- 状态拦颜色 -->
        <item name="colorPrimaryDark">@color/pure_write</item>
        <!--Button、TextView的文字颜色-->
        <item name="android:textColor">@color/pure_text_default</item>
        <!-- Button、TextView的提示文字颜色 -->
        <item name="android:textColorHint">@color/pure_text_hint_default</item>
        <!-- 解决 Android 5.1 及以上版本 Button 英文字符串自动变大写的问题 -->
        <item name="android:textAllCaps">false</item>
        <!-- 没有actionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
    </style>




    <style name="DialogFragment">
        <item name="android:windowBackground">@android:color/transparent</item>
        //透明
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowNoTitle">true</item>
        <!--  无标题  -->
        <item name="android:background">@android:color/transparent</item>
        //透明
    </style>




</resources>
