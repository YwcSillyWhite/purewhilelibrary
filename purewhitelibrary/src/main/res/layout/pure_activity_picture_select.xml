<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/bar_layout"
            android:background="@color/pure_write">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/bar_layout_relative"
            android:background="@color/pure_write">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/pure_picture_back"
                android:padding="12dp"
                android:id="@+id/action_bar_left"
                android:onClick="onClickView"
                android:adjustViewBounds="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="全部"
                android:id="@+id/action_bar_center"
                android:onClick="onClickView"
                android:textSize="18sp"
                android:textColor="#333"/>
        </RelativeLayout>
        <include layout="@layout/pure_view_line_gray" android:id="@+id/pure_view_line"></include>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/relative_bottom"
                android:background="@color/pure_write">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="预览"
                    android:paddingLeft="15dp"
                    android:gravity="center"
                    android:textColor="@drawable/pure_seletor_text_color"
                    android:enabled="false"
                    android:textSize="15sp"
                    android:paddingRight="15dp"
                    android:onClick="onClickView"
                    android:id="@+id/picture_preview"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="请选择"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="15dp"
                    android:gravity="center"
                    android:textColor="@drawable/pure_seletor_text_color"
                    android:enabled="false"
                    android:textSize="15sp"
                    android:paddingRight="16dp"
                    android:onClick="onClickView"
                    android:id="@+id/picture_sure"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycler_view"
                android:padding="2dp"
                android:layout_above="@id/relative_bottom">
            </androidx.recyclerview.widget.RecyclerView>
            <include layout="@layout/pure_lucency_layout" android:visibility="gone"
                android:id="@+id/pure_lucency_layout"></include>
        </RelativeLayout>
    </LinearLayout>
</layout>