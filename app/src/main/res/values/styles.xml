<resources>


    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--  背景颜色  -->
        <item name="android:windowBackground">@color/back</item>
        <!-- 状态拦颜色 -->
        <item name="colorPrimaryDark">@color/write</item>
        <!--Button、TextView的文字颜色-->
        <item name="android:textColor">@color/text_default</item>
        <!-- Button、TextView的提示文字颜色 -->
        <item name="android:textColorHint">@color/text_hint_default</item>
        <!-- 解决 Android 5.1 及以上版本 Button 英文字符串自动变大写的问题 -->
        <item name="android:textAllCaps">false</item>
        <!-- 没有actionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"></style>

    <style name="StartTheme" parent="AppTheme">
        <!-- windown是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- windown布局页面背景颜色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
